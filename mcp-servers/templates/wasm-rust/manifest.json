{
  "$schema": "https://harbor.dev/schemas/mcp-wasm-manifest.v1.json",
  "manifestVersion": "1.0.0",
  "id": "my-wasm-server",
  "name": "my-wasm-server",
  "displayName": "My WASM Server",
  "version": "1.0.0",
  "description": "A WASM MCP server that does something useful",
  "author": {
    "name": "Your Name",
    "url": "https://github.com/yourname"
  },
  "license": "MIT",
  "keywords": ["example", "template", "wasm"],

  "wasm": {
    "file": "target/wasm32-wasip1/release/my_mcp_server.wasm",
    "wasi": {
      "version": "preview1"
    }
  },

  "tools": [
    {
      "name": "greet",
      "description": "Say hello to someone",
      "inputSchema": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the person to greet"
          }
        },
        "required": ["name"]
      }
    },
    {
      "name": "add",
      "description": "Add two numbers together",
      "inputSchema": {
        "type": "object",
        "properties": {
          "a": {
            "type": "number",
            "description": "First number"
          },
          "b": {
            "type": "number",
            "description": "Second number"
          }
        },
        "required": ["a", "b"]
      }
    }
  ]
}
