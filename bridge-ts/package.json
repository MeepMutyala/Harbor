{
  "name": "harbor-bridge",
  "version": "0.0.2",
  "description": "Native messaging bridge for Harbor Firefox extension",
  "type": "module",
  "main": "dist/main.js",
  "bin": {
    "harbor-bridge": "./dist/main.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "tsx src/main.ts",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "pkg": "pkg . --config pkg.config.json",
    "pkg:macos": "pkg . --target node18-macos-arm64,node18-macos-x64 --output build/harbor-bridge"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": [
      "node_modules/better-sqlite3/prebuilds/**/*",
      "node_modules/better-sqlite3/build/**/*.node"
    ],
    "outputPath": "build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "any-llm-ts": "file:./src/any-llm-ts",
    "better-sqlite3": "^11.7.0",
    "drizzle-orm": "^0.45.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.2",
    "@yao-pkg/pkg": "^5.12.0",
    "drizzle-kit": "^0.31.8",
    "esbuild": "^0.27.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
