{
  "$schema": "https://harbor.dev/schemas/mcp-wasm-manifest.v1.json",
  "manifestVersion": "1.0.0",
  "name": "mcp-time",
  "displayName": "MCP Time Server",
  "version": "1.0.0",
  "description": "A simple MCP server that provides current time information. The host passes the current time to the server since WASM cannot access system clocks directly.",
  "author": {
    "name": "Harbor Project",
    "url": "https://github.com/anthropics/harbor"
  },
  "license": "MIT",
  "repository": "https://github.com/anthropics/harbor",
  "keywords": ["time", "datetime", "demo"],

  "wasm": {
    "file": "target/wasm32-wasip1/release/mcp_time_wasm.wasm",
    "wasi": {
      "version": "preview1"
    }
  },

  "tools": [
    {
      "name": "time.now",
      "description": "Get current time from host",
      "inputSchema": {
        "type": "object",
        "properties": {
          "now": {
            "type": "string",
            "description": "Current timestamp (ISO 8601 format, provided by host)"
          }
        },
        "required": ["now"]
      }
    }
  ]
}
